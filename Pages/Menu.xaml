<Page x:Class="Poliklinika.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poliklinika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Доктор" x:Name="BtnDoctor" Click="BtnDoctor_Click" Width="150" Height="30" BorderBrush="Transparent" Background="AliceBlue" FontWeight="Bold"/>
            <Button Content="Пациент" x:Name="BtnPatient" Click="BtnPatient_Click" Width="150" Height="30" BorderBrush="Transparent" Background="AliceBlue" FontWeight="Bold"/>
            <Button Content="Диагнозы" x:Name="BtnDignoses" Click="BtnDignoses_Click" Width="150" Height="30" BorderBrush="Transparent" Background="AliceBlue" FontWeight="Bold"/>
            <Button Content="Отделения" x:Name="BtnOtdel" Click="BtnOtdel_Click" Width="150" Height="30" BorderBrush="Transparent" Background="AliceBlue" FontWeight="Bold"/>
            <Button Content="История болезни" x:Name="BtnHistory" Click="BtnHistory_Click" Width="150" Height="30" BorderBrush="Transparent" Background="AliceBlue" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
